<!-- Validation failure messages -->
<% if @mood.errors.any? %>
  <% @mood.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Mood #<%= @mood.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_mood/<%= @mood.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for mood -->
      <div class="form-group">
        <label for="mood" class="control-label">
          Mood
        </label>

        <input type="text" id="mood" name="mood" placeholder="Mood" class="form-control" value="<%= @mood.mood %>">
      </div>

      <button class="btn btn-warning">
        Update Mood
      </button>
      or
      <a href="/moods/<%= @mood.id %>">Cancel</a>
    </form>
  </div>
</div>
